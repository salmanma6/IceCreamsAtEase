<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopzone">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shopex"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/enterdet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="20sp"
    android:background="#7f333639"
    android:gravity="center_horizontal"
    android:layout_alignParentTop="true"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:text="




    Enter the following details"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Country name"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:id="@+id/scn"
        android:textSize="18sp"
        android:layout_marginRight="40dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"/>
    <EditText
        android:layout_width="match_parent"
        android:hint="State name"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:layout_below="@id/scn"
        android:id="@+id/scs"
        android:textSize="18sp"
        android:layout_marginRight="40dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:hint="District name"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:layout_below="@id/scs"
        android:id="@+id/scc"
        android:textSize="18sp"
        android:layout_marginRight="40dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/nxtshopzone"
        android:text="Next>"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/layoutforbuttons4"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/skipshopzone"
        android:text="Skip>"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/layoutforbuttons4"/>

</RelativeLayout>
