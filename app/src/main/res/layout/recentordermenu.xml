<!-- Layout for a single list item for new launch
            List_item.xml-->
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:id="@+id/linrec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Pink"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recpic"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/recpic"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ordercheck"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:background="@color/White"
                    android:src="@drawable/check"
                    />

                <TextView
                    android:id="@+id/recname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:text="Red Velvet"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/reccateg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="start"
                    android:text="Category:Cone"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/recprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:gravity="end"
                    android:text="Price-$50"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/recdel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:text="Delivery-$6"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="130dp"
                    android:layout_height="2dp"
                    android:layout_gravity="end"
                    android:background="@color/colorPrimaryDark"
                    />

                <TextView
                    android:id="@+id/rectot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:text="Total-$56"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
